{
  "private": true,
  "workspaces": [
    "packages/@kdujs/*",
    "packages/test/*",
    "packages/kdu-cli-version-marker"
  ],
  "scripts": {
    "lint": "eslint --fix packages/**/*.js packages/**/bin/*",
    "check-links": "node scripts/checkLinks.js",
    "clean": "rimraf packages/test/* packages/**/temp/*",
    "sync": "node scripts/syncDeps.js",
    "boot": "node scripts/bootstrap.js",
    "release": "yarn --pure-lockfile && yarn clean && node scripts/release.js",
    "patch-chromedriver": "node scripts/patchChromedriver.js"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommitMsg.js"
  },
  "lint-staged": {
    "*.{js,kdu}": [
      "eslint --fix",
      "git add"
    ],
    "packages/**/bin/*": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@kdujs/eslint-config-airbnb": "^5.0.0",
    "@kdujs/eslint-config-prettier": "^5.0.0",
    "@kdujs/eslint-config-standard": "^5.0.0",
    "@kdujs/eslint-config-typescript": "^5.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "chromedriver": "^77.0.0",
    "debug": "^4.1.0",
    "eslint": "^5.16.0",
    "eslint-plugin-graphql": "^3.0.3",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-kdu": "^5.0.0",
    "eslint-plugin-kdu-libs": "^3.0.2",
    "execa": "^1.0.0",
    "geckodriver": "^1.16.2",
    "globby": "^9.2.0",
    "graphql": "^14.3.1",
    "http-server": "^0.11.1",
    "inquirer": "^6.3.1",
    "lerna": "^3.13.4",
    "lint-staged": "^8.1.5",
    "memfs": "^2.15.2",
    "minimist": "^1.2.0",
    "prettier": ">= 1.13.0",
    "request": "^2.83.0",
    "request-promise-native": "^1.0.7",
    "rimraf": "^2.6.2",
    "semver": "^6.1.0",
    "typescript": "^3.4.5",
    "webpack": "^4.0.0",
    "yorkie": "^2.0.0"
  },
  "resolutions": {
    "kdu": "^2.6.14",
    "kdu-template-compiler": "^2.6.14",
    "kdu-server-renderer": "^2.6.14"
  }
}
